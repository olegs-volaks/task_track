<%= simple_form_for(@form, **@options) do |f| %>
  <%= f.error_notification %>
  <%= f.input :title %>
  <%= f.input :short_description, as: :text %>
  <%= f.input :status, collection: @form.statuses_collection, required: true %>
  <%= f.association :assigned_to, collection: @form.users_collection, required: true %>
  <%= f.input :deadline, as: :string, input_html: { data: { controller: "flatpickr" } } %>
  <%= f.input :detail_description, as: :rich_text_area %>
  <%= f.submit class: 'btn btn-success' %>
  <%= link_to t('.cancel'), tasks_path, class: 'btn btn-secondary' %>
<% end %>
